<%= f.field_container :name, class: ['row'] do %>
  <%= f.label :name, Spree.t(:name, scope: :shipping_matrix) %>
  <span class="required">*</span><br />
  <%= f.text_field :name, class: ['fullwidth'] %>
  <%= f.error_message_on :name %>
<% end %>

<div class="js-shipping-matrix-rules">
  <fieldset>
    <legend><%= Spree.t(:rules, scope: :shipping_matrix) %></legend>
    <table
      class="index"
      id="list_shipping_matrix">

      <colgroup>
        <col style="width: 35%">
        <col style="width: 25%">
        <col style="width: 25%">
        <col style="width: 15%">
      </colgroup>

      <thead>
        <tr data-hook="option_header">
          <th><%= Spree.t(:role, scope: :shipping_matrix) %></th>
          <th><%= Spree.t(:min_line_item_total, scope: :shipping_matrix) %></th>
          <th><%= Spree.t(:amount, scope: :shipping_matrix) %></th>
          <th class="actions"></th>
        </tr>
      </thead>

    <%= f.fields_for :rules do |f| %>
      <%= render partial: 'spree/admin/shipping_matrix_rules/form',
                 locals: { f: f } %>
    <% end %>
    </table>

    <div>
        <%= button_link_to Spree.t(:add_rule, scope: :shipping_matrix),
                           '#new-rule',
                           { icon: 'plus', class: 'js-duplicate-last-row' } %>
    </div>
  </fieldset>
</div>
